apiVersion: batch/v1
kind: Job
metadata:
  name: p4-001-get-database-result-test-result
  namespace: "{{ namespace_name }}"
  labels:
    app: p4-001-get-database-result-test-result
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: p4-001-get-database-result-test-result
          image: quay.io/rhn_consulting_kemori/get-database-result:latest
          imagePullPolicy: Always
          env:
            - name: DB_HOST
              value: "{{ database_app_name }}.{{ namespace_name }}.svc.cluster.local"
            - name: DB_NAME
              value: "{{ pg_database }}"
            - name: DB_PASS
              value: "{{ pg_password }}"
            - name: DB_PORT
              value: "{{ pg_port }}"
            - name: DB_USER
              value: "{{ pg_user }}"
            - name: INPUT_FILE_PATH
              value: /mnt/data/assert/sql/
            - name: INPUT_FILE_NAME
              value: assert-actual-001-test_result.sql
            - name: OUTPUT_FILE_PATH
              value: /mnt/data/assert/actual/
            - name: OUTPUT_FILE_NAME
              value: assert-actual-001-test_result.csv
          volumeMounts:
            - name: p4-001-get-database-result-test-result-vol
              mountPath: /mnt/data
      volumes:
        - name: p4-001-get-database-result-test-result-vol
          persistentVolumeClaim:
            claimName: "{{ pvc_name }}"
      imagePullSecrets:
        - name: "{{ image_pull_secret_name }}"
